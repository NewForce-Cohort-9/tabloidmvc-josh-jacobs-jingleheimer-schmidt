@model TabloidMVC.Models.Tag

@{
    ViewData["Title"] = "Edit";
}

<h1 class="w-100" style="text-align:center">Edit Tag</h1>
<hr />

<h4 class="w-100" style="text-align:center">Current Tag: "@Model.Name"</h4>
<br />
<div class="row justify-content-center align-items-center" style="width:95vw; height:50%; align-content:center">
    <div class="col-md-4 d-flex justify-content-center align-items-center">
        <form asp-action="Edit" class="w-100">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" />
            </div>
            <div class="form-group w-100">
                <label asp-for="Name" class="control-label text-center w-100" style="margin-bottom: 7px"></label>
                <input asp-for="Name" class="form-control text-center w-100" style="color: #7459EC" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group d-flex justify-content-center w-100">
                <input type="submit" style="background-color:#7459EC; color:#FFFFFF" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />

<div>
    <a asp-action="Index">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
