@model TabloidMVC.Models.ViewModels.PostEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="@Model.Post.Id" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Post.Title" class="control-label"></label>
                <input asp-for="@Model.Post.Title" class="form-control" />
                <span asp-validation-for="@Model.Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Post.Content" class="control-label"></label>
                <input asp-for="@Model.Post.Content" class="form-control" />
                <span asp-validation-for="@Model.Post.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Post.ImageLocation" class="control-label"></label>
                <input asp-for="@Model.Post.ImageLocation" class="form-control" />
                <span asp-validation-for="@Model.Post.ImageLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Post.CreateDateTime" class="control-label"></label>
                <input asp-for="@Model.Post.CreateDateTime" class="form-control" />
                <span asp-validation-for="@Model.Post.CreateDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Post.PublishDateTime" class="control-label"></label>
                <input asp-for="@Model.Post.PublishDateTime" class="form-control" />
                <span asp-validation-for="@Model.Post.PublishDateTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="@Model.Post.IsApproved" /> @Html.DisplayNameFor(model => model.Post.IsApproved)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Post.CategoryId" class="control-label"></label>
                <input asp-for="@Model.Post.CategoryId" class="form-control" />
                @foreach (Category category in Model.CategoryOptions)
                {
                    <option value="@category.Id">@category.Name</option>
                }
                <span asp-validation-for="@Model.Post.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">  
                <input asp-for="@Model.Post.UserProfileId" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input type="cancel" value="Cancel" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
